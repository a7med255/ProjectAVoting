@model Person


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Form elements </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Form elements</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Basic form layout </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data" asp-area="Admin"
                  asp-controller="Person" asp-action="Save" role="form">
                <input asp-for="Id" type="hidden" />

                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputJob">Job</label>
                    <input asp-for="Job" type="text" class="form-control" placeholder="Job">
                    <span asp-validation-for="Job"></span>
                </div>
                <div class="form-group">
                    <label for="exampleSelectYear">Year Exeriance</label>
                    <select asp-for="YearExp" class="form-control" placeholder="Year Exeriance">
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option>@i</option>
                        }
                    </select>
                    <span asp-validation-for="YearExp"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputAge">Age</label>
                    <input asp-for="Age" type="text" class="form-control" placeholder="Age">
                    <span asp-validation-for="Age"></span>
                </div>
                
                <div class="form-group">
                    <label for="exampleTextarea1">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes"></span>
                </div>
                <div class="form-group">
                    <label for="exampleSelectVotes"> Select a Vote Option</label>
                    <select asp-for="Votes" class="form-control" placeholder=" Select a Vote Option">

                            <option>@Model.Votes</option>

                    </select>
                    <span asp-validation-for="Votes"></span>
                </div>
                <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>
